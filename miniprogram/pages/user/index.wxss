.container {
  min-height: 100vh;
  background: #f5f5f5;
}

.user-header {
  background: #1296db;
  padding: 40rpx 30rpx;
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.user-info {
  color: #fff;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}

.phone {
  font-size: 28rpx;
  opacity: 0.8;
}

.menu-list {
  background: #fff;
  margin-top: 20rpx;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.menu-item-left {
  display: flex;
  align-items: center;
}

.menu-item-left image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.menu-item-left text {
  font-size: 30rpx;
  color: #333;
}

.arrow {
  width: 32rpx;
  height: 32rpx;
}

.logout {
  margin: 60rpx 30rpx;
  background: #fff;
  color: #ff4d4f;
  text-align: center;
  padding: 20rpx 0;
  border-radius: 10rpx;
  font-size: 32rpx;
}
