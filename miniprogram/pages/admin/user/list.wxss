.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.school-select {
  background: #fff;
  border-radius: 10rpx;
  padding: 15rpx 20rpx;
  margin-right: 20rpx;
  width: 200rpx;
}

.picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.picker text {
  font-size: 28rpx;
  color: #333;
}

.picker image {
  width: 24rpx;
  height: 24rpx;
}

.search {
  flex: 1;
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
  margin-right: 20rpx;
}

.search input {
  flex: 1;
  font-size: 28rpx;
}

.search-btn {
  color: #409EFF;
  font-size: 28rpx;
  padding-left: 20rpx;
}

.add-btn {
  background: #409EFF;
  color: #fff;
  font-size: 28rpx;
  padding: 15rpx 30rpx;
  border-radius: 10rpx;
}

.user-list {
  margin-top: 20rpx;
}

.user-item {
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user-info {
  flex: 1;
}

.name {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.phone {
  font-size: 28rpx;
  color: #666;
}

.actions {
  display: flex;
  align-items: center;
}

.edit, .delete {
  font-size: 28rpx;
  padding: 10rpx 20rpx;
  border-radius: 6rpx;
}

.edit {
  color: #409EFF;
  margin-right: 20rpx;
}

.delete {
  color: #f56c6c;
}

.empty, .loading, .no-more {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 28rpx;
}

.loading {
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading::before {
  content: "";
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
  border: 4rpx solid #999;
  border-top-color: transparent;
  border-radius: 50%;
  animation: loading 0.8s linear infinite;
}

@keyframes loading {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}

.modal-title {
  font-size: 32rpx;
  color: #333;
  text-align: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.form {
  padding: 30rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #eee;
}

.btn {
  flex: 1;
  text-align: center;
  padding: 25rpx 0;
  font-size: 30rpx;
}

.cancel {
  color: #666;
  border-right: 1rpx solid #eee;
}

.confirm {
  color: #409EFF;
}
