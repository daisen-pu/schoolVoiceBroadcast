.container {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
}

.login-box {
  width: 80%;
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.title {
  text-align: center;
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 60rpx;
}

.form-item {
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  padding: 20rpx 0;
  margin-bottom: 30rpx;
}

.form-item image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.form-item input {
  flex: 1;
  font-size: 30rpx;
}

.login-btn {
  background: #1296db;
  color: #fff;
  margin-top: 60rpx;
  border-radius: 10rpx;
}
