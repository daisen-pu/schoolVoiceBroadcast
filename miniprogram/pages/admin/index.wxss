.container {
  min-height: 100vh;
  background: #f5f5f5;
}

.header {
  background: #1296db;
  padding: 40rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.title {
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
}

.logout {
  color: #fff;
  font-size: 28rpx;
  padding: 10rpx 20rpx;
  border: 1rpx solid #fff;
  border-radius: 30rpx;
}

.menu-list {
  display: flex;
  flex-wrap: wrap;
  padding: 30rpx;
  background: #fff;
  margin-top: 20rpx;
}

.menu-item {
  width: 33.33%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 0;
}

.menu-item image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.menu-item text {
  font-size: 28rpx;
  color: #333;
}

.statistics {
  margin: 20rpx;
  display: flex;
  justify-content: space-between;
}

.stat-item {
  background: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
  flex: 1;
  margin: 0 10rpx;
  text-align: center;
}

.label {
  font-size: 26rpx;
  color: #666;
  display: block;
  margin-bottom: 10rpx;
}

.value {
  font-size: 36rpx;
  color: #1296db;
  font-weight: bold;
}
